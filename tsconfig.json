{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"composite": true,
		"isolatedModules": true,
		"lib": ["ES2015"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["svelte"],
		"useDefineForClassFields": true
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"]
}
